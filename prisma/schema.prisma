generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  FARMER
  BUYER
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  firstName String
  lastName  String
  password  String
  role      UserRole
  farms     Farm[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Farm {
  id            Int       @id @default(autoincrement())
  farmName      String    @unique
  description   String?
  location      String?
  farmerId      Int
  farmer        User      @relation(fields: [farmerId], references: [id])
  products      Product[]
  reviews       Review[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
}

model Product{
  id          Int       @id @default(autoincrement())
  productName String
  price       Float
  farmId      Int
  farm        Farm      @relation(fields: [farmId], references: [id])
  reviews     Review[]
}

model Review{
  id          Int     @id @default(autoincrement())
  comment     String
  rating      Int
  productId   Int
  product     Product   @relation(fields: [productId], references: [id])
  farmId      Int?
  farm        Farm?    @relation(fields: [farmId], references: [id])
}